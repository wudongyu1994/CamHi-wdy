<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/delete_icon_camera_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip"
        android:src="@drawable/ic_delete_camera"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nickname_camera_item"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
         <TextView
            android:id="@+id/state_camera_item"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/font_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/uid_camera_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_normal"
            android:singleLine="true"
            android:textSize="12sp" />

       
    </LinearLayout>

    <ImageView
        android:id="@+id/setting_camera_item"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_marginRight="3dp"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:padding="12dip"
        android:src="@drawable/ic_setting_btn" />

</LinearLayout>